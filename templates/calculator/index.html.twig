<h1>Calculator</h1>

<form method="post">
	<input type="text" name="firstNumber"/>
	<select name="operation" id="">
		<option value="+">+</option>
		<option value="-">-</option>
		<option value="*">x</option>
		<option value="/">/</option>
	</select>
	<input type="text" name="secondNumber"/>
	<button type="submit">Calculate</button>
</form>

{% if 'result' is defined %}
	<p>Result:{{result}}</p>
{% endif %}
